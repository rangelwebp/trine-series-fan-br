---
interface Props {
	title: string;
}

const { title } = Astro.props;

import { ViewTransitions } from "astro:transitions";
---

<head>
    <ViewTransitions />
    <meta charset="UTF-8" />
    <meta name="description" content="Projeto desenvolvido por fãs para a Série Trine e outros games da Frozenbyte" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/assets/favicon.png" />
    <title>{title}</title>
</head>

<style is:global>
	html {
		font-family: 'Inter Variable', sans-serif;
		background: #09090B;
		color: #71717A;
	}

	.text-title{
		font-family: 'Epilogue Variable', sans-serif;
		font-weight: 800;
	}
</style>